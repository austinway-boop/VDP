{
  "_comment": "Speech Emotion Analysis API - Production Ready",
  "functions": {
    "api/*.js": {
      "maxDuration": 300
    },
    "python/*.py": {
      "maxDuration": 300
    }
  },
  "env": {
    "DEEPSEEK_API_KEY": "@deepseek_api_key",
    "OPENAI_API_KEY": "@openai_api_key",
    "BING_KEY": "@bing_speech_key",
    "IBM_USERNAME": "@ibm_watson_username",
    "IBM_PASSWORD": "@ibm_watson_password"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "regions": ["iad1"],
  "github": {
    "silent": true
  }
}
